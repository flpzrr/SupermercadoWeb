<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Formas de Pagamento</title>
    <style>
        body {
            font-family: Arial;
            background: #f4f4f4;
            padding: 20px;
        }

        h1 {
            margin-bottom: 10px;
        }

        table {
            width: 100%;
            background: white;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 10px;
            border-bottom: 1px solid #ccc;
        }

        th {
            background: #0078d7;
            color: white;
        }

        input {
            padding: 10px;
            width: 300px;
        }

        button {
            padding: 10px 15px;
            background: #0078d7;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover {
                background: #005fa3;
            }
    </style>
</head>
<body>

    <button onclick="window.location.href='dashboard.html'">
        ← Voltar
    </button>

    <h1>Formas de Pagamento</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
            </tr>
        </thead>
        <tbody id="lista"></tbody>
    </table>

    <h3>Nova forma de pagamento</h3>

    <input type="text" id="nome" placeholder="Nome da forma de pagamento" />
    <button onclick="salvar()">Cadastrar</button>

    <script>
        async function carregar() {
            const res = await fetch('/api/formapagamento');

            if (!res.ok) {
                alert("Erro ao buscar formas de pagamento");
                return;
            }

            const dados = await res.json();
            const tabela = document.getElementById("lista");
            tabela.innerHTML = "";

            dados.forEach(f => {
                tabela.innerHTML += `
                    <tr>
                        <td>${f.id}</td>
                        <td>${f.nome}</td>
                    </tr>
                `;
            });
        }

        async function salvar() {
            const nome = document.getElementById("nome").value;

            if (!nome) {
                alert("Digite um nome");
                return;
            }

            const res = await fetch('/api/formapagamento', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ nome })
            });

            if (res.ok) {
                document.getElementById("nome").value = "";
                carregar();
                alert("Forma de pagamento cadastrada!");
            } else {
                alert("Erro ao salvar");
            }
        }

        carregar();
    </script>

</body>
</html>
